<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Morph.Manager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Morph.Manager"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Services">
            <ShellContent
                Title="Morph Services"
                ContentTemplate="{DataTemplate local:ServicesPage}"
                Route="ServicesPage" />
        </Tab>
        <Tab Title="Startups">
            <ShellContent
                Title="Morph Startups"
                ContentTemplate="{DataTemplate local:StartupsPage}"
                Route="StartupsPage" />
        </Tab>
    </TabBar>

</Shell>
